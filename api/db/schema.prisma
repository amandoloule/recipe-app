model Recipe {
  id           String   @id @default(uuid())
  title        String
  ingredients  String // Conteúdo HTML do Tiptap
  instructions String // Conteúdo HTML do Tiptap
  prepTime     String
  servings     String
  notes        String? // Conteúdo HTML do Tiptap
  likes        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  tags         Tag[]

  // Índices para otimizar buscas
  @@index([createdAt(sort: Desc)]) // Para ordenação do feed
  @@index([likes(sort: Desc)]) // Para receitas mais curtidas
  @@index([title]) // Para busca por título
}

model Tag {
  id        String   @id @default(uuid())
  name      String   @unique
  recipes   Recipe[]
  createdAt DateTime @default(now())

  // Índice para busca por tags
  @@index([name])
}
